{% extends 'base.html.twig' %}
{% block stylesheets %}

{% endblock %}
{% block body %}
    <div class="f">
        {% set value = "Aucun" %}
        {% if objectif is not null %}
        {% if objectif.perimetre == "elec" %}
            {% set value = "électricité" %}
        {% else %}
            {% set value = "gaz naturel" %}
        {% endif %}
        {% endif %}
        <h2>Objectif du {{ client.nomSignataire~' '~client.prenomSignataire }} sur {{ value }}</h2>
        <hr>
        {{ form_start(form) }}
        <div class="row">
            <div class="col-12">{{ form_row(form.valeur) }}</div>
        </div>
        <div class="row">
            <div class="col-12">{{ form_row(form.strategieCommercial) }}</div>
        </div>
        <input type="submit" class="btn btn-warning" value="Modifier">
        {{ form_end(form) }}

    </div>

    <br>
    <br>
{% endblock %}